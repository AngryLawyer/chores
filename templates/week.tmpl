<div class="col-xs-12 col-md-6">
    <h2>Week {{letter}}</h2>
    <table class="table table-striped table-bordered">
        {% for day in chores %}
        <tr>
            <td>{{day.0}}</td>
            <td>
                {% for chore in day.1 %}
                    <div class="row"><div class="col-xs-12">{{chore.title}}<button class="close pull-right" aria-label="Close"><span aria-hidden="true">&times;</span></button></div></div>
                {% endfor %}
                <div class="row">
                    <div class="col-xs-12">
                        <form method="POST">
                            <input type="hidden" name="type" value="create" />
                            <input type="hidden" name="week" value="{{letter}}" />
                            <input type="hidden" name="day" value="{{loop.count|subtract:"1"}}" />
                            <select name="chore">
                                <option value="">Select...</option>
                                {% for chore in all_chores %}
                                    <option value="{{chore.id}}">{{chore.title}}</option>
                                {% endfor %}
                            </select>
                            <input type="submit" value="Add"></input>
                        </form>
                    </div>
                </div>
            </td>
        </tr>
        {% endfor %}
    </table>
</div>
